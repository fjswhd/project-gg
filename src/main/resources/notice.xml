<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="noticens">
	<!-- 총 공지 개수 -->
	<select id="selectTotalNotice" resultType="int">
		SELECT COUNT(no_no)
		FROM NOTICE
	</select>
	
	<!-- 공지 리스트 -->
	<select id="selectNotice" parameterType="map" resultMap="noticeResultMap">
		SELECT n2.*
		FROM (
			SELECT ROWNUM rn, n1.*
			FROM (
				SELECT n.*, m.nickname
				FROM NOTICE n, MEMBER m
				WHERE n.m_id = m.m_id
				ORDER BY n.reg_date DESC		
			) n1		
		) n2
		WHERE rn BETWEEN #{startRow} AND #{endRow}
	</select>
	
	<resultMap type="notice" id="noticeResultMap">
		<id 	column="no_no" 		property="no_no" />
		<result column="m_id" 		property="m_id" />
		<result column="subject" 	property="subject" />
		<result column="content" 	property="content" />
		<result column="readcount" 	property="readcount" />
		<result column="reg_date" 	property="reg_date" />
		<result column="del" 		property="del" />
		<association property="member" 		javaType="member" 	resultMap="memberResultMap" />
	</resultMap>
	<resultMap type="member" id="memberResultMap">
		<id 	column="m_id" 		property="m_id" />
		<result	column="nickname"	property="nickname" />
	</resultMap>
	
</mapper>